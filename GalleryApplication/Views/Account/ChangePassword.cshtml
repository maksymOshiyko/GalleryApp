@model GalleryApplication.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div style="align-items: center; justify-content: center; display: flex">
  <div class="card col-3 m-0">
    <div class="card-body">
      <form asp-area="" asp-action="ChangePassword" asp-controller="Account" autocomplete="off">
        <div class="form-group">
          <label asp-for="OldPassword">Old password</label>
          <input type="password" class="form-control" asp-for="OldPassword">
        </div>
        <div class="form-group">
          <label asp-for="NewPassword">New password</label>
          <input type="password" class="form-control" asp-for="NewPassword">
        </div>
        <div class="form-group">
          <label asp-for="ConfirmNewPassword">Confirm new password</label>
          <input type="password" class="form-control" asp-for="ConfirmNewPassword">
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <button type="submit" class="btn btn-secondary" style="width: 100%">Save</button>
      </form>
    </div>
  </div>
</div>


@section scripts{
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}